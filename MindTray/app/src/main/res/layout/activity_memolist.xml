<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".memolist.MemoListActivity" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/bg3"
            android:scaleType="fitXY"
            android:scaleX="-1"
            android:src="@drawable/backdrop2" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/bg2"
            android:src="@drawable/backdrop2"
            android:scaleType="fitXY"
            android:scaleX="1" />
        -->

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/bg1"
            android:src="@drawable/backdrop2"
            android:scaleType="fitXY" />

    </FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/button_main"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_selector"
                android:text="&lt;- main"
                android:onClick="button_main_onClick" />

            <Button
                android:id="@+id/button_calendar"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_selector"
                android:text="&lt;- calendar"
                android:onClick="button_calendar_onClick" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:background="@android:color/darker_gray"
            android:layout_height="2dp"
            android:layout_margin="5dp" />

        <TextView
            android:id="@+id/textView_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/memolist_title"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:background="@drawable/activity_main_panel"
            android:padding="5dp"
            android:layout_gravity="center" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/activity_memos_listview"
            android:layout_marginTop="5dp">

            <ListView
                android:id="@+id/listView_memos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:dividerHeight="0dp"
                android:layout_margin="5dp">

            </ListView>

            <android.support.v4.view.ViewPager
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/button_create"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="button_create_onClick"
                    android:text="@string/memolist_button_create"
                    android:background="@drawable/button_big"
                    style="@style/ButtonsNorm"
                    android:layout_weight="1" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/overflow"
                    android:id="@+id/button_overflow"
                    android:background="@drawable/button_big"
                    android:minWidth="50dp"
                    android:onClick="button_overflow_onClick"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/overflow"
                    android:tint="@android:color/black"
                    android:scaleType="fitXY"
                    android:foregroundTint="@android:color/black" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:background="@android:color/darker_gray"
                android:layout_height="2dp"
                android:layout_margin="5dp"
                android:id="@+id/view" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:text="previous day"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/button_prevDate"
                    android:layout_weight="1"
                    android:onClick="button_prevDate_onClick"
                    android:background="@drawable/button_selector"
                    android:layout_marginRight="5dp" />

                <Button
                    android:text="next date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/button_nextDate"
                    android:layout_weight="1"
                    android:onClick="button_nextDate_onClick"
                    android:background="@drawable/button_selector"
                    android:layout_marginLeft="5dp" />

            </LinearLayout>

            <Button
                android:text="Show all toggle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button_showAll"
                android:layout_weight="1"
                android:onClick="button_showAll_onClick"
                android:background="@drawable/button_selector"
                android:layout_marginTop="5dp" />

        </LinearLayout>
    </LinearLayout>

</FrameLayout>
