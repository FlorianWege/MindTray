<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android1:background="@drawable/backdrop2"
    android1:padding="8dp"
    tools:context="com.example.mindtray.memo.MemoActivity" >

    <TextView
        android1:id="@+id/textView_title"
        android1:layout_width="match_parent"
        android1:layout_height="wrap_content"
        android1:gravity="center"
        android1:text="@string/memo_title"
        android1:textAppearance="?android:attr/textAppearanceMedium"
        android1:textColor="#FFFFFF"
        android1:textStyle="bold"
        android1:typeface="serif" />

    <View
        android1:id="@+id/divider"
        android1:layout_width="wrap_content"
        android1:layout_height="2dp"
        android1:layout_margin="5dp"
        android1:background="#FFFFFF" />

    <LinearLayout
        android1:layout_width="match_parent"
        android1:layout_height="wrap_content"
        android1:orientation="vertical" >

        <TabHost
            android1:id="@+id/tabHost"
            android1:layout_width="match_parent"
            android1:layout_height="wrap_content"
            android1:layout_margin="2dp" >

            <HorizontalScrollView
                android1:id="@+id/scrollView_tabHost"
                android1:layout_width="wrap_content"
                android1:layout_height="wrap_content"
                android1:background="@drawable/activity_memo_tabhost" >

                <TabWidget
                    android1:id="@android:id/tabs"
                    android1:layout_width="wrap_content"
                    android1:layout_height="wrap_content"
                    android1:layout_margin="3dp" >

                </TabWidget>
            </HorizontalScrollView>

            <FrameLayout
                android1:id="@android:id/tabcontent"
                android1:layout_width="match_parent"
                android1:layout_height="wrap_content" >
            </FrameLayout>
        </TabHost>

    </LinearLayout>

    <LinearLayout
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_margin="3dp"
        android1:orientation="vertical" >

        <android.support.v4.view.ViewPager
            android1:id="@+id/pager"
            android1:layout_width="match_parent"
            android1:layout_height="match_parent"
            android1:layout_margin="1dp"
            android1:background="@drawable/activity_memo_pager"
            android1:padding="8dp" >

        </android.support.v4.view.ViewPager>

    </LinearLayout>

</LinearLayout>